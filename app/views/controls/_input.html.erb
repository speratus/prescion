<div class="field">
    <label class="label" for="<%= id ||= "" %>"><%= label_text %></label>
    <div class="control">
        <input 
            class="input" 
            type="<%= type ||= "text" %>"
            id="<%= id ||= "" %>"
            placeholder="<%= placeholder ||= ""%>" 
            value="<%= value ||= "" %>"
            name="<%= name ||= "" %>"
        >
    </div>
</div>